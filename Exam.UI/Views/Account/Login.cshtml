@model LoginVM

<form asp-action="Login" method="post" class="p-4 w-50 mx-auto shadow">
    <div class="form-group">
        <label>Kullanıcı Adı : </label><br />
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input type="text" asp-for="UserName" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre : </label><br />
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" value="" class="form-control" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>

    <div class="form-group">
        <button type="submit" class="btn d-block btn-info">Giriş Yap</button>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
