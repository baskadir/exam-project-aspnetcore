@model List<Quiz>

<div class="row">
    <table class="table table-bordered">
        <tr>
            <th>Başlık</th>
            <th>Oluşturulma Tarihi</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-action="GetQuiz" asp-controller="Quiz" asp-route-id="@item.Id">@item.Title</a></td>
                <td>@item.CreatedDate.ToShortDateString()</td>
                <td><a asp-action="Delete" asp-controller="Quiz" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a></td>
            </tr>
        }
    </table>
</div>